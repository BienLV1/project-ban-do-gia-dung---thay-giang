@model Models.FrameWork.sanpham

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sanPhamTuongTu = (List<Models.FrameWork.sanpham>)ViewBag.SanPhamTuongTu;
}

<!--====== App Content ======-->
<div class="app-content">

    <!--====== Section 1 ======-->
    <div class="u-s-p-t-90">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">

                    <!--====== Product Breadcrumb ======-->
                    <div class="pd-breadcrumb u-s-m-b-30">
                        <ul class="pd-breadcrumb__list">
                            <li class="has-separator">

                                <a href="/Home/Index">Trang chủ</a>
                            </li>
                            <li class="has-separator">

                                <a href="/san-pham">Sản phẩm</a>
                            </li>

                            <li class="is-marked">

                                <a href="/san-pham">@Model.TENSP</a>
                            </li>
                        </ul>
                    </div>
                    <!--====== End - Product Breadcrumb ======-->
                    <!--====== Product Detail Zoom ======-->
                    <div class="pd u-s-m-b-30">
                        <div class="slider-fouc pd-wrap">
                            <div id="pd-o-initiate">
                                @for (int i = 0; i < 3; i++)
                                {
                                    <div class="pd-o-img-wrap" data-src="@Model.ANH">

                                        <img class="u-img-fluid" src="@Model.ANH" data-zoom-image="@Model.ANH" alt="@Model.TENSP">
                                    </div>
                                }


                            </div>

                            <span class="pd-text">Click for larger zoom</span>
                        </div>
                        <div class="u-s-m-t-15">
                            <div class="slider-fouc">
                                <div id="pd-o-thumbnail">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <div>

                                            <img class="u-img-fluid" src="@Model.ANH" alt="">
                                        </div>
                                    }


                                </div>
                            </div>
                        </div>
                    </div>
                    <!--====== End - Product Detail Zoom ======-->
                </div>
                <div class="col-lg-7">

                    <!--====== Product Right Side Details ======-->
                    <div class="pd-detail">
                        <div>

                            <span class="pd-detail__name">@Model.TENSP</span>
                        </div>
                        <div>
                            @{
                                if (Model.GIAMGIA != null)
                                {
                                    <div class="pd-detail__inline">

                                        <span class="pd-detail__price">@Model.GIAMGIA.GetValueOrDefault(0).ToString("N0") VND</span>

                                        <del class="pd-detail__del">@Model.GIAX.GetValueOrDefault(0).ToString("N0") VND</del>
                                    </div>
                                }
                                else
                                {
                                    <div class="pd-detail__inline">

                                        <span class="pd-detail__price">@Model.GIAX.GetValueOrDefault(0).ToString("N0") VND</span>


                                    </div>
                                }
                            }
                        </div>


                        <div class="u-s-m-b-15">

                            <span class="pd-detail__preview-desc">@Model.MOTA</span>
                        </div>

                        
                        <div class="u-s-m-b-15">
                            <form class="pd-detail__form" method="get">
                                
                                <div class="pd-detail-inline-2">
                                    <!--<div class="u-s-m-b-15">
                                       
                                        <!--====== Input Counter ======-->
                                        <!--<div class="input-counter">

                                            <span class="input-counter__minus fas fa-minus"></span>

                                            <input class="input-counter__text input-counter--text-primary-style txtQuantity" data-id="@Model.ID" type="text" value="1 " data-min="1" data-max="1000">

                                            <span class="input-counter__plus fas fa-plus"></span>
                                        </div>-->
                                        <!--====== End - Input Counter ======-->
                                    <!--</div>-->
                                    <div class="u-s-m-b-15">

                                        <button class="btn btn--e-brand-b-2" type="submit"><a href="/add-to-card?productId=@Model.ID&quantity=1" style="color:wheat">Thêm vào giỏ hàng</a></button>


                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="u-s-m-b-15">

                            <span class="pd-detail__label u-s-m-b-8">Chính sách Sản phẩm:</span>
                            <ul class="pd-detail__policy-list">
                                <li>
                                    <i class="fas fa-check-circle u-s-m-r-8"></i>

                                    <span>Bảo vệ người mua.</span>
                                </li>
                                <li>
                                    <i class="fas fa-check-circle u-s-m-r-8"></i>

                                    <span>Hoàn trả đầy đủ nếu bạn không nhận được đơn đặt hàng của mình.</span>
                                </li>
                                <li>
                                    <i class="fas fa-check-circle u-s-m-r-8"></i>

                                    <span>Trả hàng được chấp nhận nếu sản phẩm không như mô tả.</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!--====== End - Product Right Side Details ======-->
                </div>
            </div>
        </div>
    </div>

    <!--====== Product Detail Tab ======-->
    <!--====== End - Product Detail Tab ======-->
    <div class="u-s-p-b-90">

        <!--====== Section Intro ======-->
        <div class="section__intro u-s-m-b-46">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section__text-wrap">
                            <h1 class="section__heading u-c-secondary u-s-m-b-12">CÓ THỂ BẠN SẼ THÍCH</h1>

                            <span class="section__span u-c-grey">SẢN PHẨM TƯƠNG TỰ</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Intro ======-->
        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="slider-fouc">
                    <div class="owl-carousel product-slider" data-item="4">
                        @foreach (var item in sanPhamTuongTu)
                        {
                            <div class="u-s-m-b-30">
                                <div class="product-o product-o--hover-on">
                                    <div class="product-o__wrap">

                                        <a class="aspect aspect--bg-grey aspect--square u-d-block" href="/chi-tiet-san-pham/@item.ID">

                                            <img class="aspect__img" src="@item.ANH" alt="">
                                        </a>
                                        <div class="product-o__action-wrap">
                                            <ul class="product-o__action-list">
                                                <li>

                                                    <a href="/chi-tiet-san-pham/@item.ID" data-modal="modal" data-modal-id="#quick-look" data-tooltip="tooltip" data-placement="top" title="Detail View"><i class="fas fa-search-plus"></i></a>
                                                </li>
                                                <li>

                                                    <a href="/add-to-card?productId=@item.ID&quantity=1" data-modal="modal" data-modal-id="#add-to-cart" data-tooltip="tooltip" data-placement="top" title="Add to Cart"><i class="fas fa-plus-circle"></i></a>
                                                </li>

                                            </ul>
                                        </div>
                                    </div>



                                    <span class="product-o__name">

                                        <a href="/chi-tiet-san-pham/@item.ID">@item.TENSP</a>
                                    </span>
                                    <div class="product-o__rating gl-rating-style">
                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>


                                    </div>

                                    @{
                                        if (item.GIAMGIA != null)
                                        {
                                            <span class="product-o__price">
                                                @item.GIAMGIA VND

                                                <span class="product-o__discount">@item.GIAX VND</span>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="product-o__price">
                                                @item.GIAX VND


                                            </span>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 1 ======-->
</div>
<!--====== End - App Content ======-->
