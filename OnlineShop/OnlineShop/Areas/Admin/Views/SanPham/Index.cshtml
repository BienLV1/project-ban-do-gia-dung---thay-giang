@model PagedList.IPagedList<Models.FrameWork.sanpham>

@using PagedList.Mvc
@{
    ViewBag.Title = "Quản lý tintuc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách sản phẩm.}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Index", "SanPham", FormMethod.Get))
        {
            <div class="row" style="margin-bottom:20px;">
                <div class="col-lg-5">
                    <div class="input-group">
                        <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control bg-light border-0 small" placeholder="Search for..."
                               aria-label="Search" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        }
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá xuất</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Ngày nhập</th>
                        <th>Ảnh</th>
                        <th>Mô tả</th>
                        <th>Mã hãng sản xuất</th>
                        <th>Mã loại</th>
                        <th>Top hot</th>                
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>@item.MASP</td>
                            <td>@item.TENSP</td>
                            <td>@item.GIAX</td>
                            <td>@item.GIA</td>
                            <td>@item.SOLUONG</td>
                            <td>@item.NGAYNHAP</td>
                            <td>@item.ANH</td>
                            <td>@item.MOTA</td>
                            <td>@item.MAHANGSX</td>
                            <td>@item.MALOAI</td>
                            <td>@item.TOPHOT</td>
                            <td>
                                <a href="/Admin/SanPham/Edit/@item.ID"><button type="button" class="btn btn-primary">Cập nhật</button></a>
                                |
                                <button type="button" class="btn btn-danger">
                                    @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn muốn xóa bản ghi này không",
                                   OnComplete = "$('#row_ " + item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </button>


                            </td>
                        </tr>

                    }

                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
            <a href="/Admin/SanPham/Insert"><button type="button" class="btn btn-primary">Thêm mới</button></a>
        </div>
    </div>
</div>
