@model Models.FrameWork.tintuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Cập nhật tin tức.}


@using (Html.BeginForm("Edit", "TinTuc", FormMethod.Post))
{
    @Html.AntiForgeryToken()

